<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.Title - UOF </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#ffffff;">
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("UOF", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav mr-auto">

                    @if (Request.IsAuthenticated && User.IsInRole("Staff"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Course", "Index", "Courses", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Category", "Index", "Categories", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Detail", "Index", "Details", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Topic", "Index", "Topics", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Enrollment", "Index", "Enrollments", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Trainee", "Index", "Trainees", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Trainer", "Index", "Trainers", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Manager User", "Index", "Users", null, new { @class = "nav-link" }
                             )
                        </li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink(
                              "Manager User", "Index", "Users", null, new { @class = "nav-link" }
                              )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                              "Role", "Index", "Roles", null, new { @class = "nav-link" }
                              )
                        </li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Trainee"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Enrollment", "Index", "Enrollments", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                        "Trainee", "Index", "Trainees", null, new { @class = "nav-link" }
)
                        </li>

                    }

                    @if (Request.IsAuthenticated && User.IsInRole("Trainer"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Topic", "Index", "Topics", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Detail", "Index", "Details", null, new { @class = "nav-link" }
                             )
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink(
                             "Trainer", "Index", "Trainers", null, new { @class = "nav-link" }
                             )
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Da Nang-Viet Nam</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>