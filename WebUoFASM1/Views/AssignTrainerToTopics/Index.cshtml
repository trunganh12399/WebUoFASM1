@model IEnumerable<WebUoFASM1.Models.AssignTrainerToTopic>

@{
    ViewBag.Title = "Index";
}

<h2>Trainer To Topic</h2>
@if (User.IsInRole("Staff"))
{
    <p>
        @Html.ActionLink("Assign Trainer To Topic", "Assign")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topic)
            </th>
            <th>Edit</th>
            <th>Delete</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainer.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic.Name)
                </td>

                <td> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>

                <td> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>s
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainer"))
{<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Topic)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic.Name)
                </td>
            </tr>
        }
    </table>
}