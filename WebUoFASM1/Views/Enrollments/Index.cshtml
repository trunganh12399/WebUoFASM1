@model IEnumerable<WebUoFASM1.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Staff"))
{
    <p>
        @Html.ActionLink("Assign Trainee to Course", "Assign")
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trainee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>Edit</th>
            <th>Delete</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
                <td> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>

                <td> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
            </tr>
        }
    </table>
}
@if (User.IsInRole("Trainee"))
{<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.Course)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>
            </tr>
        }
    </table>
}