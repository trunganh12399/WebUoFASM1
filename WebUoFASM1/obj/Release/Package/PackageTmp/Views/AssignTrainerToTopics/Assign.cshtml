@model WebUoFASM1.ViewModels.AssignTrainerToTopicViewmodel

@{
    ViewBag.Title = "Assign";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Assign Trainer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AssignTrainerToTopic.TrainerId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.AssignTrainerToTopic.TrainerId, new SelectList(Model.Trainers, "Id", "UserName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AssignTrainerToTopic.TrainerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AssignTrainerToTopic.TopicId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.AssignTrainerToTopic.TopicId, new SelectList(Model.Topics, "Id", "Name"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AssignTrainerToTopic.TopicId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign" class="btn btn-default" />
            </div>
        </div>
    </div>
}