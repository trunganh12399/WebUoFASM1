@model IEnumerable<WebUoFASM1.Models.Topic>
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<style>
    table {
        font-family: 'Times New Roman 18px';
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<body>

    <h2>Course</h2>

    @if (Request.IsAuthenticated && User.IsInRole("Staff"))
    {
        <p>
            @Html.ActionLink("Assign Trainee to Course", "Assign")
        </p>
    }

    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            @if (Request.IsAuthenticated && User.IsInRole("Staff"))
            {
                <th>Edit</th>
                <th>Delete</th>
            }
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name</td>
                <td> @item.Description</td>
                @if (Request.IsAuthenticated && User.IsInRole("Staff"))
                {

                    <td> @Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>

                    <td> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
                }
            </tr>
        }
    </table>
</body>